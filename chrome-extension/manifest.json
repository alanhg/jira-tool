{
  "manifest_version": 2,
  "name": "Jira Tool",
  "description": "extend quick filter",
  "version": "0.1",
  "browser_action": {
    "default_title": "Jira Tool",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/secure/RapidBoard.jspa*rapidView=*"
      ],
      "js": [
        "filter.js"
      ],
      "css": [
        "filter.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
