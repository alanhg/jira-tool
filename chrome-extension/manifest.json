{
  "manifest_version": 3,
  "name": "Jira Tool",
  "description": "extend quick filter",
  "version": "0.4",
  "action": {
    "default_title": "Jira Tool",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/secure/RapidBoard.jspa*rapidView=*"
      ],
      "js": [
        "storage.js",
        "filter.js"
      ],
      "css": [
        "filter.css"
      ]
    },
    {
      "matches": [
        "*://*/secure/RapidBoard.jspa*rapidView=*",
        "*://*/browse/*-*"
      ],
      "js": [
        "storage.js",
        "issue-detail.js"
      ],
      "css": [
        "filter.css"
      ]
    }
  ]
}
